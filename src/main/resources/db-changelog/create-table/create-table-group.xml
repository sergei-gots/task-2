<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
>
    <changeSet id="create-table-group" author="Sergei">
        <preConditions>
            <not>
                <tableExists tableName="group"/>
            </not>
        </preConditions>

        <createTable tableName="group">
            <column name="group_id" type="VARCHAR(200)" >
                <constraints primaryKey="true"/>
            </column>
            <column name="parent_id" type="VARCHAR(200)">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    <!--/changeSet-->

    <!--changeSet id="create-parent-group-constraint"  author="Sergei"-->
        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="group"
                                 constraintName="fk_parent_id"
                                 referencedColumnNames="group_id"
                                 referencedTableName="group"/>
    </changeSet>

</databaseChangeLog>